<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/label_connection_error"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/light_red"
    android:visibility="gone"
    tools:visibility="visible">

    <TextView
        android:layout_margin="@dimen/default_margin_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawablePadding="@dimen/default_margin_small"
        android:gravity="center"
        android:text="@string/label_internet_error"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Tooltip"
        app:drawableStartCompat="@drawable/ic_error"
        app:drawableTint="?colorSurface" />

</FrameLayout>